//Função para avançar para próxima folder (não encontrei nenhuma do Protheus então criei esta :D)
Static Function FProximaAba(Folder)

    Folder:ShowPage(Folder:nOption+1)

Return

//Função que armazena/remove os valores dos checkbox em uma Array
Static Function FArmazenarCheckBox(lCheck, cCheck)

    nPosicao := aScanx(aLinguagens, cCheck) //Retorna a posição que o valor estão, caso não tenha retorna 0

    if(lCheck == .T.)       
        if( nPosicao == 0)
            aAdd(aLinguagens, cCheck)
        endif
    else
        if( nPosicao != 0)
            aDel(aLinguagens, nPosicao) //Dimina um elemento do array e "arrasta" os demais para trás tornando nulo o último elemento
            ASize( aLinguagens, len(aLinguagens)-1) //Redimensiona o tamanho do Array removendo o valor nulo gerado pela Função aDel()
        endif
    endif

Return

//Função para exibir dados inseridos na tela
Static Function FExibirDados()

    if (Empty(cGetNome) .OR. Empty(cGetEndereco) .OR. Empty(dGetNasc) .OR. Empty(cGetCurso))
        Alert("PREENCHA TODOS OS DADOS!")
    else
        MsgInfo("Nome: " + cGetNome + Chr(13) + "Endereço: " + cGetEndereco + Chr(13) + "Sexo: " + aItensSexo[nRadio] + Chr(13) + "Nascimento: " + cValtochar(dGetNasc) + Chr(13) +;
        "Curso: " + cGetCurso + Chr(13) + "Semestre: " + cOpcao + Chr(13) + "Linguagens: " + FConcatenarArray(aLinguagens),;
         "Dados Inseridos")
    endif

Return

//Função para Concatenar elementos do array e retorná-los como uma String
Static Function FConcatenarArray(aArray)
    Local i
    cLinguagens := ""

    if len(aArray) > 0
        // Percorre o array aLinguagens para concatenar os elementos
        FOR i := 1 TO Len(aLinguagens)
            cLinguagens += CValtoChar(aLinguagens[i])
            IF i < Len(aLinguagens)
                cLinguagens += ", "  // Adiciona ví­rgula entre os elementos
            ENDIF
        NEXT
    else
        cLinguagens := "Nenhuma"
    endif

Return cLinguagens




