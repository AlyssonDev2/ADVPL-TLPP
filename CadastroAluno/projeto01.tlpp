//Função para inclusão dos dados
Static Function IncluirSZ5()

    DBSelectArea("SZ5")
    DBSetOrder(1)
    if VerificaVazios()
        If DbSeek(xFilial("SZ5")+cGetCodigo)
            Alert("Já existe um cadastro com esse código!")
        else    
            RecLock("SZ5", .T.)
                //Dados Pessoais
                SZ5->Z5_FILIAL := xFilial("SZ5")
                SZ5->Z5_COD    := cGetCodigo
                SZ5->Z5_NOME   := cGetNome
                SZ5->Z5_NASC   := dGetNasc
                SZ5->Z5_SEXO   := cValtoChar(nRadioSexo) //1 para Masculino e 2 para feminino
                SZ5->Z5_DDD    := cGetDDD
                SZ5->Z5_CEL    := cGetNumero
                SZ5->Z5_CPF    := cGetCPF
                SZ5->Z5_SERIE  := cOpcaoEnsino
                
                //Endereço
                SZ5->Z5_END     := cGetEndereco
                SZ5->Z5_BAIRRO  := cGetBairro
                SZ5->Z5_CEP     := cGetCep
                SZ5->Z5_CIDADE  := cGetCidade
                SZ5->Z5_ESTADO  := nOpcaoEstado

                //Informações adicionais
                SZ5->Z5_INF     := IIF(lCheck1, "1","2") //1 para sim e 2 para não
                SZ5->Z5_TEATRO  := IIF(lCheck2, "1","2") //1 para sim e 2 para não
                SZ5->Z5_INGLES  := IIF(lCheck3, "1","2") //1 para sim e 2 para não
                SZ5->Z5_LIBRAS  := IIF(lCheck4, "1","2") //1 para sim e 2 para não
                SZ5->Z5_OBS     := cMultiGet
            MsUnlock()
            MsgInfo("Aluno incluido com sucesso!", "SUCESSO")
            LimparDados()
        endif
    endif
    SZ5->(DbCloseArea())
return

//Função para consultar e pegar dados da tabela SZ5
Static Function ConsultarSZ5()
    DBSelectArea("SZ5")
    DBSetOrder(1)
    IF DBSeek(xFilial("SZ5")+cGetCodigo)
        //Dados Pessoais
        cGetNome       := SZ5->Z5_NOME
        dGetNasc       := SZ5->Z5_NASC
        nRadioSexo     := Val(SZ5->Z5_SEXO) //1 para Masculino e 2 para feminino
        cGetDDD        := SZ5->Z5_DDD
        cGetNumero     := SZ5->Z5_CEL 
        cGetCPF        := SZ5->Z5_CPF 
        cOpcaoEnsino   := SZ5->Z5_SERIE
        
        //Endereço
        cGetEndereco := SZ5->Z5_END     
        cGetBairro   := SZ5->Z5_BAIRRO  
        cGetCep      := SZ5->Z5_CEP     
        cGetCidade   := SZ5->Z5_CIDADE  
        nOpcaoEstado := SZ5->Z5_ESTADO  

        //Informações adicionais
        lCheck1   := IIF(SZ5->Z5_INF == "1", .T.,.F.)       
        lCheck2   := IIF(SZ5->Z5_TEATRO == "1", .T.,.F.)  
        lCheck3   := IIF(SZ5->Z5_INGLES == "1", .T.,.F.) 
        lCheck4   := IIF(SZ5->Z5_LIBRAS == "1", .T.,.F.) 
        cMultiGet := SZ5->Z5_OBS 
        
    SZ5->(DbCloseArea())
    ELSE
       alert("Código não corresponde a nenhum registro no banco!")
    ENDIF

return

//Função para alterar registros na tabela SZ5
Static Function AlterarSZ5()
    DBSelectArea("SZ5")
    if VerificaVazios()
        If DbSeek(xFilial("SZ5")+cGetCodigo)
            RecLock("SZ5", .F.)
                //Dados Pessoais
                SZ5->Z5_NOME   := cGetNome
                SZ5->Z5_NASC   := dGetNasc
                SZ5->Z5_SEXO   := cValtoChar(nRadioSexo) //1 para Masculino e 2 para feminino
                SZ5->Z5_DDD    := cGetDDD
                SZ5->Z5_CEL    := cGetNumero
                SZ5->Z5_CPF    := cGetCPF
                SZ5->Z5_SERIE  := cOpcaoEnsino
                
                //Endereço
                SZ5->Z5_END     := cGetEndereco
                SZ5->Z5_BAIRRO  := cGetBairro
                SZ5->Z5_CEP     := cGetCep
                SZ5->Z5_CIDADE  := cGetCidade
                SZ5->Z5_ESTADO  := nOpcaoEstado

                //Informações adicionais
                SZ5->Z5_INF     := IIF(lCheck1, "1","2") //1 para sim e 2 para não
                SZ5->Z5_TEATRO  := IIF(lCheck2, "1","2") //1 para sim e 2 para não
                SZ5->Z5_INGLES  := IIF(lCheck3, "1","2") //1 para sim e 2 para não
                SZ5->Z5_LIBRAS  := IIF(lCheck4, "1","2") //1 para sim e 2 para não
                SZ5->Z5_OBS     := cMultiGet
            MsUnlock()
            SZ5->(DbCloseArea())
            MsgInfo("Aluno alterado com sucesso!", "SUCESSO")
        else    
            Alert("Código não corresponde a nenhum cadastro no banco.")
        endif
    endif
return

//Função para excluir registros
Static Function ExcluirSZ5()
    DBSelectArea("SZ5")
    DBSetOrder(1)
    if MsgYesNo("Tem certeza que deseja exluir o aluno de código: " + cGetCodigo + "?", "Confirmar Exclusão")
            If DbSeek(xFilial("SZ5")+cGetCodigo)
                RecLock("SZ5", .F.)
                    DbDelete()
                MsUnlock()
                MsgInfo("Aluno deletado com sucesso!", "SUCESSO")
                LimparDados()
            else    
                Alert("Código não corresponde a nenhum cadastro no banco.")
            endif
    endif
    SZ5->(SZ5->(DbCloseArea()))
return

Static Function LimparDados()
    cGetCodigo     := ""
    cGetNome       := ""
    nOpcaoEstado := aItensEstado[1]
    cOpcaoEnsino := aItensEnsino[1]
    dGetNasc       := ""
    nRadioSexo     :=  1 //1 para Masculino e 2 para feminino
    cGetDDD        := ""
    cGetNumero     := ""
    cGetCPF        := ""
    cOpcaoEnsino   := ""
    
    //Endereço
    cGetEndereco := ""
    cGetBairro   := "" 
    cGetCep      := ""    
    cGetCidade   := "" 
    nOpcaoEstado := ""  

    //Informações adicionais
    lCheck1   := .F.    
    lCheck2   := .F.
    lCheck3   := .F.
    lCheck4   := .F.
    lCheck5   := .F.
    cMultiGet := "Observações adicionais sobre o aluno." 

return
//Verificar se os gets estão vazios
Static Function VerificaVazios()
    Local lVerificador 
    if(Empty(cGetCodigo) .or. Empty(cGetNome) .or. Empty(dGetNasc) .or. Empty(cGetCPF) .or. Empty(cGetDDD) .or.;
    Empty(cGetNumero) .or. Empty(cGetEndereco) .or. Empty(cGetBairro) .or. Empty(cGetCep) .or. Empty(cGetCidade) .or. Empty(cMultiGet))
        Alert("Por favor, preencha todos os campos!")
        lVerificador := .F.
    else
        lVerificador := .T.
    endif
return lVerificador

//Funcão para Marcar todos os checksBox
Static Function fMarcarTodos(lCheck)

    if lCheck
        lCheck1 := .T.
        lCheck2 := .T.
        lCheck3 := .T.
        lCheck4 := .T.

        nCount := 4
    else
        lCheck1 := .F.
        lCheck2 := .F.
        lCheck3 := .F.
        lCheck4 := .F.

        nCount := 0
    endif

    oCheck1:Refresh()
    oCheck2:Refresh()
    oCheck3:Refresh()
    oCheck4:Refresh()

Return

